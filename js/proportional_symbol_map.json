{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": 800,
  "height": 600,
  "title": "Reactor Type of Nuclear Power Plants in different Country",
  "projection": {"type": "equalEarth"},
  "params": [
    {
      "name": "ReactorType_selection",
      "bind": {
        "input": "select",
        "options": [
          null,
          "ABWR",
          "BWR",
          "FBR",
          "GCR",
          "HTGR",
          "HWGCR",
          "HWLWR",
          "LWGR",
          "OCR",
          "PHWR",
          "PWR",
          "SGHWR"
        ],
        "labels": [
          "Show All",
          "Advanced Boiling Water Reactor (ABWR)",
          "Boiling Water Reactor (BWR)",
          "Fast Breeder Reactor (FBR)",
          "Gas-Cooled Reactor (GCR)",
          "High-Temperature Gas-cooled Reactor (HTGR)",
          "Heavy Water Gas-Cooled Reactor (HWGCR)",
          "Heavy Water Light Water Reactor (HWLWR)",
          "Light Water Gas-cooled Reactor (LWGR)",
          "Organic Cooled Reactor (OCR)",
          "Pressurised Heavy Water Reactor (PHWR)",
          "Pressurised Water Reactor (PWR)",
          "Steam Generating Heavy Water Reactor (SGHWR)"
        ],
        "name": "Reactor Type Selection: "
      }
    }
  ],
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/ting1999/FIT3179_Assignment2/main/js/worldmap.topojson",
        "format": {"type": "topojson", "feature": "worldmap"}
      },
      "mark": {
            "type": "geoshape", 
            "fill": "lightgray", 
            "stroke": "gray"
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/ting1999/FIT3179_Assignment2/main/data/nuclear_power_plants.csv"
      },
      "encoding": {
        "longitude": {"field": "Longitude", "type": "quantitative"},
        "latitude": {"field": "Latitude", "type": "quantitative"}
      },
      "layer": [
        {
          "transform": [
            {"filter": "datum['Longitude'] != '' && datum['Latitude'] != '' && datum['ReactorType'] != ''"},
            {"filter": "ReactorType_selection == null || datum.ReactorType == ReactorType_selection"}
          ],
          "mark": {"type": "circle", "stroke": "black"},
          "encoding": {
            "size": {
              "field": "Capacity", 
              "type": "quantitative",
              "scale": {
                "type": "threshold",
                "domain": [10, 100, 500, 1000],
                "range": [100, 200, 300, 400, 500]
              },
              "legend": {"format": ","}
            },
            "color": {
              "field": "ReactorType", 
              "type": "nominal",
              "scale": {
                "domain": [
                  "ABWR",
                  "BWR",
                  "FBR",
                  "GCR",
                  "HTGR",
                  "HWGCR",
                  "HWLWR",
                  "LWGR",
                  "OCR",
                  "PHWR",
                  "PWR",
                  "SGHWR"
                ]
              }            
            },
            "opacity": {"value": 0.3},
            "tooltip": [
              {"field": "Name", "type": "nominal", "title": "Nuclear Power Plant's Name"},
              {"field": "Country", "type": "nominal", "title": "Nuclear Power Plant's Country"}, 
              {"field": "ReactorType", "type": "nominal", "title": "Nuclear Power Plant's Reactor Type"},
              {"field": "Capacity", "type": "quantitative", "title": "Nuclear Power Plant's Capacity", "format": ","}
            ]
          }
        }
        
      ]
    }
  ]
}
